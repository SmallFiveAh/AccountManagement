{
    "manifest_version": 3,
    "name": "账号管理",
    "version": "1.0.0",
    "description": "存储页面账号信息,可本地存储,可github存储(个人账号),可导入导出数据",
    "icons": {
        "16": "resource/img/icon-16.png",
        "32": "resource/img/icon-32.png",
        "48": "resource/img/icon-48.png",
        "128": "resource/img/icon-128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent",
        "tabs"
    ],
    "host_permissions": [
        "https://api.github.com/*"
    ],
    "options_ui": "pages/index.html",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "js": ["content/index.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/*"],
            "matches": ["<all_urls>"]
        }
    ]
}